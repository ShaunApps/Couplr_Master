               <div class= "col-md-8 col-lg-8" align="right" >

                 <div class="container">
                    <!-- Trigger the modal with a button -->

                    <!-- Modal -->
                    <div class="modal fade" id="myModal" role="dialog">
                       <div class="modal-dialog">
                          <!-- Modal content-->
                          <div class="modal-content">
                             <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <%= form_for :conversation, url: :message, html: { class: "modal-title" } do |f| %>
                                <div class="form-group">
                                   <%= f.label :recipients, "Recipient: #{@user.username}" %>
                                   <%= f.hidden_field :user_id, :value => @user.id %>
                                </div>
                             </div>
                             <div class="modal-body">
                                <div class="form-group">
                                   <%= f.label :subject %>
                                   <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
                                </div>
                                <div class="form-group">
                                   <%= f.label :message %>
                                   <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4  %>
                                </div>
                                <div id="btnSubmit">
                                   <%= f.submit "Send Message", class: "btn btn-success" %>
                                </div>
                              </div>
                                <% end %>

                             <!-- <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div> -->
                          </div>
                       </div>
                    </div>
                 </div>


                  <table class="table table-user-information" id="usershowtable">
                     <tbody>
                        <tr>
                           <td id="usershowparamfont">Couple Name:</td>
                           <td><%= @user.partner_one_name %> and <%=@user.partner_two_name %></td>
                        </tr>
                        <tr>
                           <td id="usershowparamfont"><%= @user.partner_one_name %>'s Age:</td>
                           <td><%= @user.age_one %></td>
                        </tr>
                        <tr>
                           <td id="usershowparamfont"><%=@user.partner_two_name %>'s Age:</td>
                           <td><%= @user.age_two %></td>
                        </tr>
                        <tr>
                        <tr>
                           <td id="usershowparamfont">City:</td>
                           <td>Boca</td>
                        </tr>
                        <tr>
                           <td id="usershowparamfont">State:</td>
                           <td>Florida</td>
                        </tr>
                        <td id="usershowparamfont">Relationship Status:</td>
                        <td><%= @user.relationship_status %>
                        </td>
                        <tr>
                           <td id="usershowparamfont">Have kids?</td>
                           <% if @user.have_kids %>
                           <td>Yes</td>
                           <% else %>
                           <td>No</td>
                           <% end %>
                        </tr>
                        </tr>
                     </tbody>
                  </table>
               </div>

            </div>
            <div class="row">
            </div>
            <div class="row">
               <div class="col-md-2 col-lg-2" align="left">
                  <img alt=""class="img-circle img-responsive">
                  <!-- <img src="https://www.dropbox.com/s/mt92d203lsuqtrr/married-couple-main1.jpg?dl=0" class="img-circle img-responsive"> -->
                  <!-- this is second image on page -->
               </div>
               <div class="col-md-2 col-lg-2" align="right">
                  <img alt=""class="img-circle img-responsive">
                  <%= image_tag(@user.avatar_url, size: "175x125") if @user.avatar?%>
                  <!-- this is second image on page -->
               </div>
               <div class="col-md-8 col-lg-8" align="right">
                  <table class="table table-user-information" id="aboutustable">
                     <tbody>
                        <td id="usershowparamfont">About Us:</td>
                        <tr>
                           <td id="aboutussummary"><%= @user.about_us %></td>
                        </tr>
                     </tbody>
                  </table>
               </div>
