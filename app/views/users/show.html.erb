<div class="container">

      <div class="row" id="wholerowthing">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 toppad" >

          <div class="panel panel-info">
            <div class="panel-heading" id="showpanelcolor">
              <h4 class="panel-title" id="showpanelusername"><%= @user.username %></h4>
              <div id="buttonpullright">
                 <% if current_user != @user %>
              <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" id="messagebuttonshow">Message</button>
                 <% end %>
            </div>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-4 col-lg-4" align="left"> <img alt=""class="img-circle img-responsive">


                  <%= image_tag(@user.avatar_url, size: "375x300", :class => "profilepic") if @user.avatar?%>
               </div>
               <!--<div class="col-xs-10 col-sm-10 hidden-md hidden-lg"> <br>
                  <dl>
                    <dt>DEPARTMENT:</dt>
                    <dd>Administrator</dd>
                    <dt>HIRE DATE</dt>
