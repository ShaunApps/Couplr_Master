<h1>Register page</h1>
<%= form_for @user, method: :patch do |f| %>
<% if @user.errors.any? %>
<div class="error_messages">
  <h2>Form is invalid</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :partner_one_birthday %>
  <%= f.date_field :birthday_one %>
</div>

<div class="form-group">
  <%= f.label :partner_two_birthday %>
  <%= f.date_field :birthday_two %>
</div>

<div class="form-group">
  <%= f.label :relationship_status %>
  <%= f.text_field :relationship_status %>
</div>

<div class="form-group">
  <%= f.label :we_are_a %>
  <%= f.text_field :we_are_a %>
</div>

<div class="form-group">
  <%= f.label :we_are_looking_for %>
  <%= f.text_field :we_are_looking_for %>
</div>

<div class="form-group">
  <%= f.label :street_number %>
  <%= f.text_field :street_number %>
</div>

<div class="form-group">
  <%= f.label :street_name %>
  <%= f.text_field :street %>
</div>

<div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city %>
</div>

<div class="form-group">
  <%= f.label :state %>
  <%= f.text_field :state %>
</div>

<div class="form-group">
  <%= f.label :country %>
  <%= f.text_field :country_location %>
</div>

<div class="form-group">
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>
</div>

<div class="form-group">
  <%= f.label :have_kids %>
  <%= f.check_box :have_kids %>
</div>

<div>
  <%= hidden_field_tag :redirect_location, 'two_upload_photo' %>
  <%= f.submit "Sign Up", class: "btn btn-primary" %>
</div>

<% end %>
